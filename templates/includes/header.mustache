    <body class="{{ body_class }}">
        <div class="header-wrapper">
            <header>
                <h1>
                    <span class="ir {{first_person_class }} first-person">{{ first_person_name}}</span><span class="ampersand"> and </span><span class="ir {{ second_person_class }} second-person">{{ second_person_name }}</span><span class="visuallyhidden"> - Our Wedding</span></h1>
                <h2>Getting Married</h2>
            </header>

            {{# show_event_information }}
            <section class="vevent">
                <h1 class="summary visuallyhidden">
                    The Wedding
                </h1>

                <div class="event-when event-information-item dtstart" title="2013-11-16">
                    <h2>When</h2>
                    <div class="event-information-wrapper">
                        <p class="value">3pm &ndash; 11pm</p>
                        <p class="value">Saturday 16 November 2013</p>
                </div>
                </div>

                <div class="event-information-item adr location">
                    <h2>Where</h2>
                    <p class="extended-address">Hoxton Arches</p>
                    <p class="street-address">Arch 402 Cremer Street</p>
                    <p class="locality">London</p>
                    <p class="postal-code">E2 8HD</p>
                </div>
            </section>
            {{/ show_event_information }}

            <nav {{# show_navigation }}class="show-nav"{{/ show_navigation }}>
